<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>pentaho-obs-output-plugin</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>pentaho-obs-output-plugin</baseDirectory>
  <files>
    <file>
      <source>${project.basedir}/src/main/resources/version.xml</source>
      <outputDirectory>.</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${project.basedir}/../../lib/esdk-obs-java-3.19.5.jar</source>
      <outputDirectory>./lib</outputDirectory>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/assembly/resources</directory>
      <outputDirectory>pentaho-obs-output-plugin</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>org.pentaho.di.plugins:pentaho-obs-output-plugin-core:jar</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>*:pentaho-obs-output-plugin-core:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>